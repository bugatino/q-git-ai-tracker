{
  "name": "q-git-ai-tracker",
  "displayName": "Amazon Q â†’ Git AI Tracker",
  "description": "Tracks Amazon Q edits and creates git-ai before/after checkpoints",
  "version": "0.2.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:php",
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "q-git-ai.manualBeforeEdit",
        "title": "Git AI: Manual Before-Edit Checkpoint (Amazon Q)"
      },
      {
        "command": "q-git-ai.manualAfterEdit",
        "title": "Git AI: Manual After-Edit Checkpoint (Amazon Q)"
      }
    ],
    "configuration": {
      "title": "Q Git AI Tracker",
      "properties": {
        "q-git-ai.agentName": {
          "type": "string",
          "default": "amazon-q",
          "description": "Agent name used for git-ai checkpoints"
        },
        "q-git-ai.debounceMs": {
          "type": "number",
          "default": 150,
          "minimum": 50,
          "description": "Debounce time for text changes (ms)"
        },
        "q-git-ai.minChangeSize": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "description": "Minimum chars changed to consider AI edit"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/node": "18.x",
    "typescript": "^5.4.5"
  }
}
